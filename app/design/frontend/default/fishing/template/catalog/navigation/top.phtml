<?php
/**
 * Top menu for store
 *
 * @see Mage_Catalog_Block_Navigation
 */
?>
<?php
/**
 * $this->renderCategoriesMenuHtml() supports optional arguments:
 * int Level number for list item class to start from
 * string Extra class of outermost list items
 * string If specified wraps children list in div with this class
 */
?>

 
<?php $_menu = $this->renderCategoriesMenuHtml(0,'level-top') ?>
<?php if($_menu): ?>
<div class="nav-container">
    <ul id="nav">
        <?php echo $_menu ?>
        <li class="level0 nav-2 level-top">
        	<a href="<?php echo Mage::getUrl('customer/account'); ?>" class="level-top">
        		<span><?php echo $this->__('MY ACCOUNT'); ?></span>
        	</a>
        </li>
        <li class="level0 nav-2 level-top last" style="padding-top: 18px" >
        	<a href="<?php echo Mage::helper('checkout/cart')->getCartUrl(); ?>" class="level-top">
        		<i class="fa fa-shopping-cart fa-2x"></i>
            <?php echo Mage::helper('checkout/cart')->getItemsCount(); ?>
        	</a>
        </li>
    </ul>
</div>
<div class="nav-container-mobile">
		<!-- Button trigger modal -->
		<a href="javascript:void(0)" class="modal-category" data-toggle="modal" data-target="#myModal">
			<?php echo $this->__('Category') ?>
		</a>

		<!-- Modal -->
		<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">
						<ul class="nav-menu">
								<?php echo $_menu ?>
						</ul>
					</div>
				</div>
			</div>
		</div>
</div>

<?php endif ?>
